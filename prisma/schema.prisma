generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Save {
  id          Int               @id @default(autoincrement())
  userMail    String            @unique
  playerLevel Int
  playerXp    Int
  money       Int               @default(200)
  items       SaveItemLink[]
  pokemons    SavePokemonLink[]
  userNames   UserName[]
}

model Pokemon {
  id    Int               @id @default(autoincrement())
  name  String            @unique
  saves SavePokemonLink[]
}

model Item {
  id     Int    @id @default(autoincrement())
  dbName String @unique

  dbStock Int

  SaveItemLink SaveItemLink[]
}

model SavePokemonLink {
  id          Int     @id @default(autoincrement())
  saveId      Int
  pokemonId   Int
  hpCurrent   Int
  hpBase      Int
  happiness   Int     @default(1)
  hunger      Int     @default(1)
  cleanliness Int     @default(1)
  level       Int     @default(0)
  difficulty  Int     @default(0)
  pokemon     Pokemon @relation(fields: [pokemonId], references: [id])
  save        Save    @relation(fields: [saveId], references: [id])

  @@unique([saveId, pokemonId])
}

model SaveItemLink {
  saveId Int
  itemId Int

  item Item @relation(fields: [itemId], references: [id])
  save Save @relation(fields: [saveId], references: [id])

  @@id([saveId, itemId])
}

model UserName {
  id     String @id @default(cuid())
  name   String
  saveId Int
  save   Save   @relation(fields: [saveId], references: [id])

  @@unique([name, saveId])
}
